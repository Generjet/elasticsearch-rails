<p id="notice"><%= notice %></p>

<h1><%= controller.action_name == 'search' ? 'Бүтээгдэхүүнийн хайлтын илэрц' : 'Бүтээгдэхүүн' %></h1>

<br>
<%= link_to 'Бараа бүртгэх', new_product_path, class: 'btn btn-primary' %>
<hr>
  <%= form_tag search_products_path, method: 'get' do %>
    <div class="input-group" >
      <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: 'хайх...' %>
      <%= submit_tag "Хайх" %>
    </div>
  <% end %>
</hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.detail %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

